{
  "name": "recipe-bible-api",
  "private": true,
  "version": "1.0.0",
  "description": "Recipe bible API lambda serverless functions",
  "author": {
    "name": "Gary Alway"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alwaystudios/recipe-bible-api"
  },
  "engines": {
    "node": "14"
  },
  "license": "MIT",
  "scripts": {
    "migrate:db": "ts-node --files --project tsconfig.json test/migratePostgres",
    "migrate:assets": "ts-node --files --project tsconfig.json test/migrateAssets",
    "dev": "rimraf build && serverless offline start --noPrependStageInUrl",
    "build": "rimraf build && tsc --project tsconfig.production.json",
    "format": "prettier --write 'src/**/*.{js,ts,json,md}'",
    "lint": "eslint .",
    "test": "jest src --coverage",
    "test:acceptance": "jest --runInBand test/acceptance",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "local:up": "make -C ./local up",
    "local:down": "make -C ./local down",
    "purge": "ts-node --files --project tsconfig.json test/purge.cmd"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format && yarn lint && yarn test",
      "pre-push": "yarn typecheck && yarn test:acceptance"
    }
  },
  "dependencies": {
    "@alwaystudios/recipe-bible-sdk": "^2.0.16",
    "@middy/core": "^1.5.2",
    "http-errors": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.0.3",
    "ramda": "^0.27.1",
    "sharp": "^0.28.2",
    "superagent": "^6.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.72",
    "@types/faker": "^5.1.6",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/lambda-wrapper": "^0.3.0",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.14.27",
    "@types/pg": "^7.14.11",
    "@types/ramda": "^0.27.40",
    "@types/sharp": "^0.28.1",
    "@types/superagent": "^4.1.10",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-deprecation": "^1.2.0",
    "eslint-plugin-functional": "^3.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.3.1",
    "faker": "^5.4.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lambda-wrapper": "^0.3.0",
    "nock": "^13.0.9",
    "pg": "^8.6.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "serverless": "^2.23.0",
    "serverless-offline": "^6.8.0",
    "serverless-plugin-typescript": "^1.1.9",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5",
    "wait-for-expect": "^3.0.2"
  }
}
